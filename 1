#include<iostream>
#include<algorithm>
using namespace std;
int main()
{

	setlocale(LC_ALL, "Russian");
	int arr[10];
	for (int i = 0; i < size(arr); )
	{
		cout << "введите оценку " << i + 1 << "\t";
		cin >> arr[i];
		if (arr[i] >= 0 && arr[i] <= 10)
		{
			i++;
		}
		else
		{
			cout << "вы ввели неврное число!"<<endl;
		}
	}
	int a = 0;
	auto result = minmax_element(begin(arr), end(arr));
	for (int i = 0; i < size(arr); i++)
	{
		if (arr[i] == *result.first || arr[i] == *result.second)
		{
			a++;
		}

	}
	cout << "колво min and max: " << a << endl;
	system("pause");
	return 0;
}
