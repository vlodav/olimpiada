#include<iostream>
#include<algorithm>
#include<vector>
using namespace std;
struct MyStruct
{
	int Deadline,Const;
};
int main()
{
	setlocale(LC_ALL, "Russian");
	int N,day = 1,summ=0;
	while (true)
	{
		cout << "введите количество предложений: ";
		cin >> N;
		if (1 <= N && 1000 >= N)
			break;
		else
			cout << "вы ввели недопустимое количество!" << endl;
	}
	vector<MyStruct> arr(N);
	for (int i = 0; i < N; )
	{
		cout << "введите сумму за задание и количество днекй на выполнение :"<<i+1<<"\t";
		cin >> arr[i].Const;
		cin >> arr[i].Deadline;
		if ((arr[i].Const <= 1000000 && arr[i].Const >= 0)&&(arr[i].Deadline <= 1000000 && arr[i].Deadline >= 1))
		{
			i++;
		}
		else if (!(arr[i].Const <= 1000000 && arr[i].Const >= 0)||!(arr[i].Deadline <= 1000000 && arr[i].Deadline >= 1))
		{
			cout << "вы ввели недопустимую сумму или дни" << endl;
		}
	}
	sort(begin(arr),end(arr), [](MyStruct& a, MyStruct& b) {return a.Const > b.Const; });
	for (auto a : arr)
	{
		if (day < a.Deadline)
		{
			summ += a.Const;
			day++;
		}
	}
	cout <<"итого максимум: " << summ<<endl;
	system("pause");
}
