#include<iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	int N, M;
	while (true)
	{
		cout << "Введите N и M ";
		cin >> N;
		cin >> M;
		if (1<=N&&1<=M&&N<=100&&M<=100)
		{
			break;
		}
		else
		{
			cout << "вы ввели неверные данные!" << endl;
		}
	}
	int** arr = new int*[N];
	for (int i = 0; i < N; i++)
	{
		arr[i] = new int[M];
	}
	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < M; j++)
		{
			cin >> arr[i][j];
		}
	}
	for (int i = 0; i < N; i++)
	{
		int max = arr[i][0];
		for (int j = 0; j < M; j++)
		{
			cout<<arr[i][j]<<"\t";
		}
		cout <<endl;
	}
	for (int i = 0; i < M; i++)
	{
		int max = arr[0][i];
		for (int j = 0; j < N; j++)
		{
			if (max < arr[j][i])
			{
				max = arr[j][i];
			}
		}
		cout << max<<endl;
	}
}
